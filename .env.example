# Telemetry logging
TELEMETRY_ENABLED=true
TELEMETRY_SAMPLE_RATE=0.25
TELEMETRY_MAX_BYTES=5242880
TELEMETRY_PATH=logs/telemetry.jsonl

# Server metadata
SERVER_ID=prod-us
APP_VERSION=0.2.0

# Oracle Agent (for correctness evaluation)
# Optional: Set this to enable independent problem solving with Claude API
# When set, the Oracle Agent will solve problems independently to verify correctness
# When not set, the Oracle Agent falls back to trusting the answer key
ANTHROPIC_API_KEY=your_api_key_here
